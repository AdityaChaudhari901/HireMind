# Copy this file to .env and fill in the values

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your-strong-password-here
DB_NAME=assessment_platform

# JWT Authentication
JWT_SECRET=your-super-secret-key-at-least-32-characters-long

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Test Configuration
QUESTION_TIMER_SECONDS=10

# Frontend API URL (leave as /api for docker, use full URL for external deployment)
VITE_API_URL=/api
